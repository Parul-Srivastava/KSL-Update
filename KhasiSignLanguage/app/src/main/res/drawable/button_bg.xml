    <gradient
        android:startColor="#FF7F50"
        android:endColor="#FF4500"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding inside the button -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>